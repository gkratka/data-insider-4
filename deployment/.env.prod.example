# Production Environment Configuration
# Copy this file to .env.prod and fill in the actual values

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://app_user:${DB_PASSWORD}@postgres:5432/data_intelligence_prod

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Application Security
SECRET_KEY=your_super_secret_key_at_least_32_characters_long
JWT_SECRET_KEY=another_super_secret_key_for_jwt_tokens

# External Services
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here_if_needed

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GRAFANA_PASSWORD=your_grafana_admin_password

# Email Configuration (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@yourdomain.com

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket-name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-west-2

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=info
DEBUG=false
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Settings
MAX_FILE_SIZE=524288000  # 500MB in bytes
UPLOAD_PATH=/app/uploads
QUARANTINE_PATH=/app/quarantine

# Rate Limiting
RATE_LIMIT_ENABLED=true
REDIS_RATE_LIMIT_DB=1

# Security Settings
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600
CSRF_SECRET_KEY=your_csrf_secret_key_here

# Monitoring
PROMETHEUS_METRICS_ENABLED=true
HEALTH_CHECK_PATH=/health

# Celery Configuration
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# Feature Flags
MALWARE_SCANNING_ENABLED=true
CLAMAV_DAEMON_HOST=clamav
CLAMAV_DAEMON_PORT=3310

# Analytics & Tracking (Optional)
GOOGLE_ANALYTICS_ID=your_ga_tracking_id
MIXPANEL_TOKEN=your_mixpanel_token

# Domain & SSL
DOMAIN_NAME=yourdomain.com
ACME_EMAIL=admin@yourdomain.com  # For Let's Encrypt

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Cache Settings
CACHE_TTL=3600
CACHE_KEY_PREFIX=data_intelligence:

# Data Retention
LOG_RETENTION_DAYS=30
SESSION_DATA_RETENTION_DAYS=90
BACKUP_RETENTION_DAYS=30